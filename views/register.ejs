<form action="register" method="POST">
<div class="lr-block">
    <div class="lr-block__title">
        Sigh up
    </div>
    <div class="lr-block__inputs">
        <input type="text" name="name" class="lr-block__inputs__input" placeholder="Enter Name" id="name">
        <input type="email" name="email" class="lr-block__inputs__input" placeholder="Enter Email" id="email">
        <input type="password" name="password" class="lr-block__inputs__input" placeholder="Enter Password" id="password">
        <input type="password" name="password2" class="lr-block__inputs__input" placeholder="Confirm Password" id="password2">
    </div>
    <button type="submit" class="lr-block__button">Register</button>
</div>
</form>